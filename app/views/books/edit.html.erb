<h2>Editing Book</h2>

<div class="book">
  <%= form_with model: @book do |f| %>
    <div class="book-errors">
      <% if @book.errors.any? %>
        <div class="book-errors-text">
          <strong><%= @book.errors.count %>errors prohibited this book from being saved:</strong>
          <ul class="book-errors-text2">
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
    <h5>Title</h5>
    <%= f.text_field :title %>
    <h5>Body</h5>
    <%= f.text_area :body %>

    <div class="book-post">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
</div>

